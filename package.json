{
  "name": "destro-system",
  "version": "0.0.0",
  "description": "system destro",
  "main": "./server.ts",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "nodemon ./src/server.ts",
    "build": "./build.sh",
    "docker:dev": "docker-compose up",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:ci:all": "npm test --  --coverage --forceExit",
    "test": "jest --silent --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests --forceExit",
    "test:unit": "npm test -- --watchAll -c jest-unit.config.js",
    "prisma:format": "npx prisma format --schema ./src/infra/prisma/schema.prisma",
    "test:ci": "export NODE_ENV=test && npm test -- -c jest-unit.config.js --coverage --forceExit",
    "prisma:migrate": "npx prisma migrate dev --name init --schema ./src/infra/prisma/schema.prisma"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-pug": "^1.2.5",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^4.3.8",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^11.2.6",
    "nodemon": "^3.0.2",
    "prisma": "^5.8.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "jest": "^29.7.0",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "prisma": "5.11.0",
    "pug": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.3",
    "vanilla-masker": "^1.2.0"
  }
}
